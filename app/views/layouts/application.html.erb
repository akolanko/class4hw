<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div id="container">

		<% if flash[:notice] %>
			<div class="flash notice">
				<%= flash[:notice] %>
			</div>
		<% end %>
		<% if flash[:alert] %>
			<div class="flash alert">
				<%= flash[:alert] %>
			</div>
		<% end %>

		<div id="navbar">
			<ul id="nav">
				<li>
					<a class="navlink" href="/">
						Home
					</a>
				</li>
				<li>
					<a class="navlink" href="/users">
						All Users
					</a>
				</li>
				<li>
					<a class="navlink" href="/posts">
						All Posts
					</a>
				</li>
			</ul>
		</div>

		<%= yield %>

	</div>
</body>
</html>
